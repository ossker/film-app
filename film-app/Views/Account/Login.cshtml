@model film_app.Models.AppUser
@{
	Layout = "_Layout";
	ViewData["Title"] = "Login";
}
<h2>Logowanie</h2>
<div class="alert-info">@ViewBag.result</div>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col col-lg-8">
            <ul class="list-group">
                <li class="list-group-item">Login:<br/>@Html.TextBoxFor(u=>u.UserName, new{@class="form-control"})</li>
                <li class="list-group-item">Hasło:<br/>@Html.PasswordFor(u=>u.Password, new{@class="form-control"})</li>
            </ul>
        </div>
    </div>


	<div class="form-group">
		<button type="submit" class="btn btn-primary">Zaloguj się</button>
	</div>

}
